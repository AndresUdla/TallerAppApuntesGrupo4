<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TallerAppApuntesGrupo4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:TallerAppApuntesGrupo4.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TallerAppApuntesGrupo4">

    <ShellContent
        Title="About"
        ContentTemplate="{DataTemplate local:NotePage}"
        Route="MainPage" />
    <ShellContent
        Title="New Note"
        ContentTemplate="{DataTemplate local:NotePage}"
        Route="NewNotePage" />
    <ShellContent
        Title="All notes"
        ContentTemplate="{DataTemplate local:AllNotesPage}"
        Route="AllNotes" />

</Shell>
