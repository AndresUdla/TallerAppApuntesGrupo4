<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="TallerAppApuntesGrupo4.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:TallerAppApuntesGrupo4.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="TallerAppApuntesGrupo4">

    <TabBar>
        <ShellContent
            Title="Notes"
            Icon="notes.png"
            ContentTemplate="{DataTemplate views:NotesPage}"
            Route="NotesPage" />

        <ShellContent
            Title="Recordatorios"
            Icon="reminders.png"
            ContentTemplate="{DataTemplate views:ReminderPage}"
            Route="ReminderPage" />

        <ShellContent
            Title="Clima"
            Icon="weather.png"
            ContentTemplate="{DataTemplate views:WeatherPage}"
            Route="WeatherPage" />

        <ShellContent
            Title="Acerca de"
            Icon="about.png"
            ContentTemplate="{DataTemplate views:AboutPage}"
            Route="AboutPage" />
    </TabBar>
</Shell>
