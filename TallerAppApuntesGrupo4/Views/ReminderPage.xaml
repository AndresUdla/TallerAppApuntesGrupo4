<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TallerAppApuntesGrupo4.Views.ReminderPage"
             Title="Recordatorios"
             xmlns:viewModels="clr-namespace:TallerAppApuntesGrupo4.ViewModels">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="+" Command="{Binding AgregarCommand}" />
    </ContentPage.ToolbarItems>

    <CollectionView ItemsSource="{Binding Recordatorios}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <SwipeView>
                    <SwipeView.RightItems>
                        <SwipeItems>
                            <SwipeItem Text="Eliminar"
                                       BackgroundColor="Red"
                                       Command="{Binding BindingContext.EliminarCommand, Source={x:Reference Name=recordatoriosPage}}"
                                       CommandParameter="{Binding .}" />
                        </SwipeItems>
                    </SwipeView.RightItems>
                    <Grid Padding="10">
                        <Label Text="{Binding Texto}" FontSize="16" />
                        <Label Text="{Binding FechaHora}" FontSize="12" />
                        <Label Text="{Binding Activo}" FontSize="12" />
                    </Grid>
                </SwipeView>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>